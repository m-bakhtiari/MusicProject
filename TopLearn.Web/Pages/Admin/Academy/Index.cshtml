@page
@model TopLearn.Web.Pages.Admin.Academy.IndexModel
@{
    ViewData["Title"] = "لیست آموزشگاه ها";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">لیست آموزشگاه ها</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                لیست آموزشگاه ها
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">
                        <div class="col-md-12" style="margin: 10px 0;">

                            <a asp-page="CreateAcademy" class="btn btn-outline btn-success">افزودن آموزشگاه جدید</a>

                        </div>
                        <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>عنوان آموزشگاه</th>
                                    <th>روزهای تدریس</th>
                                    <th>سازهای تدریس</th>
                                    <th>سایت</th>
                                    <th>تلفن</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Academies)
                                {
                                    <tr>
                                        <td>
                                            <a href="/Admin/Academy/DeleteAcademy/@item.AcademyId" class="btn btn-info btn-sm">
                                                حذف
                                            </a>
                                            <a href="/Admin/Academy/EditAcademy/@item.AcademyId" class="btn btn-warning btn-sm">
                                                ویرایش
                                            </a>
                                        </td>
                                        <td>@item.AcademyTitle</td>
                                        <td>@item.ActiveDays</td>
                                        <td>@item.LearningInstrument</td>
                                        <td>@item.Website</td>
                                        <td>@item.Phone</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
