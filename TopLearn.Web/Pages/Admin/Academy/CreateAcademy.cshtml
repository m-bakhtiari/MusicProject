@page

@model TopLearn.Web.Pages.Admin.Academy.CreateAcademyModel
@{
    ViewData["Title"] = "افزودن آموزشگاه جدید";
}


<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">افزودن آموزشگاه جدید</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <form method="post" enctype="multipart/form-data">
        <div class="col-md-8">
            <div class="form-group">
                <label>نام آموزشگاه</label>
                <input type="text" asp-for="Academy.AcademyTitle" class="form-control">
            </div>
            <div class="form-group">
                <label>آدرس آموزشگاه</label>
                <input type="text" asp-for="Academy.Address" class="form-control">
            </div>
            <div class="form-group">
                <label>روز های تدریس در  آموزشگاه</label>
                <input type="text" asp-for="Academy.ActiveDays" class="form-control">
            </div>
            <div class="form-group">
                <label>سازهای تدریس شده در  آموزشگاه</label>
                <input type="text" asp-for="Academy.LearningInstrument" class="form-control">
            </div>
            <div class="form-group">
                <label>آدرس سایت</label>
                <input type="text" asp-for="Academy.Website" class="form-control">
            </div>
            <div class="form-group">
                <label>تلفن</label>
                <input type="text" asp-for="Academy.Phone" class="form-control">
            </div>
            <input type="submit" value="ذخیره اطلاعات" class="btn btn-success" />

        </div>
        <div class="col-md-4">
            <img id="imgCourse" class="thumbnail" src="/UserAvatar/Defult.jpg" alt="logo" />
            <div class="form-group">

                <label>انتخاب تصویر</label>
                <input type="file" name="imgLogo" id="imgLogo">
            </div>

        </div>
    </form>
</div>

@section Scripts
{
    <script>
        function readURL(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function (e) {
                    $('#imgLogo').attr('src', e.target.result);
                }
                reader.readAsDataURL(input.files[0]);
            }
        }

        $("#imgLogo").change(function () {
            readURL(this);
        });
    </script>
}




