@page
@model TopLearn.Web.Pages.Admin.Ticket.IndexModel
@{
    ViewData["Title"] = "لیست افراد ها";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">لیست افراد</h1>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                لیست افراد
            </div>
            <div class="panel-body">
                <div class="table-responsive">
                    <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">
                        <div class="col-md-12" style="margin: 10px 0;">

                            <a asp-page="CreateTicket" class="btn btn-outline btn-success">افزودن فرد جدید</a>

                        </div>
                        <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                            <thead>
                                <tr>
                                    <th>نام و نام خانوادگی</th>
                                    <th>موبایل</th>
                                    <th>تعداد</th>
                                    <th>مبلغ</th>
                                    <th>شماره صندلی ها</th>
                                    <th>#</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Tickets)
                                {
                                    <tr>
                                        <td>@item.FirstName &nbsp; @item.LastName</td>
                                        <td>@item.Mobile</td>
                                        <td>@item.TicketCount</td>
                                        <td>@item.Amount</td>
                                        <td>
                                            @foreach (var seat in item.ConcertTicketSeats)
                                            {
                                                <span> @seat.SeatNumber /</span>
                                            }
                                        </td>
                                        <td>
                                            <a href="/Admin/Ticket/DeleteTicket/@item.ConcertTicketId" class="btn btn-info btn-sm">
                                                حذف
                                            </a>
                                            <a href="/Admin/Ticket/EditTicket/@item.ConcertTicketId" class="btn btn-warning btn-sm">
                                                ویرایش
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
