@page

@model TopLearn.Web.Pages.Admin.Ticket.CreateTicketModel
@{
    ViewData["Title"] = "افزودن فرد جدید";
}


<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">افزودن فرد جدید</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <form method="post">
        <div class="col-md-8">
          
            <div class="form-group">
                <label>نام</label>
                <input type="text" asp-for="Ticket.FirstName" class="form-control">
            </div>
            <div class="form-group">
                <label>نام خانوادگی</label>
                <input type="text" asp-for="Ticket.LastName" class="form-control">
            </div>
            <div class="form-group">
                <label>شماره موبایل</label>
                <input type="text" asp-for="Ticket.Mobile" class="form-control">
            </div>
            <div class="form-group">
                <label>مبلغ پرداختی</label>
                <input type="number" asp-for="Ticket.Amount" class="form-control">
            </div>
            <div class="form-group">
                <label>تعداد بلیط</label>
                <input type="number" asp-for="Ticket.TicketCount" class="form-control">
            </div>
          
            <input type="submit" value="ذخیره اطلاعات" class="btn btn-success"/>

        </div>
    </form>
</div>




