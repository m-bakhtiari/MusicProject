@page
@model TopLearn.Web.Pages.Admin.MenuItem.IndexModel
@{
    ViewData["Title"] = "لیست نت ها";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">لیست منو ها</h1>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                لیست نت ها
            </div>
            <div class="panel-body">
                <div class="table-responsive">
                    <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">
                        <div class="col-md-12" style="margin: 10px 0;">

                            <a asp-page="CreateMenuItem" class="btn btn-outline btn-success">افزودن منو جدید</a>

                        </div>
                        <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                            <thead>
                                <tr>
                                    <th>عنوان منو</th>
                                    <th>لینک</th>
                                    <th>#</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.MenuItems)
                                {
                                    <tr>
                                        <td>@item.Title</td>
                                        <td>@item.Link</td>
                                        <td>
                                            <a href="/Admin/MenuItem/DeleteMenuItem/@item.MenuItemId" class="btn btn-info btn-sm">
                                                حذف
                                            </a>
                                            <a href="/Admin/MenuItem/EditMenuItem/@item.MenuItemId" class="btn btn-warning btn-sm">
                                                ویرایش
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
