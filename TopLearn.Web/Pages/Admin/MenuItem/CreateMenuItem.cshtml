@page

@model TopLearn.Web.Pages.Admin.MenuItem.CreateMenuItemModel
@{
    ViewData["Title"] = "افزودن منو جدید";
}


<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">افزودن منو جدید</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <form method="post">
        <div class="col-md-8">
            <div class="form-group">
                <label>ترتیب نمایش</label>
                <input type="number" asp-for="MenuItem.Position" class="form-control" required>
            </div>
            <div class="form-group">
                <label>عنوان منو</label>
                <input type="text" asp-for="MenuItem.Title" class="form-control" required>
            </div>
            <div class="form-group">
                <label>آدرس صفحه</label>
                <input type="text" asp-for="MenuItem.Link" class="form-control" required>
            </div>
            <input type="submit" value="ذخیره اطلاعات" class="btn btn-success"/>

        </div>
    </form>
</div>




