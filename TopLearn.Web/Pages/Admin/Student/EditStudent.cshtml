@page "{id}"
@model TopLearn.Web.Pages.Admin.Student.EditStudentModel
@{
    ViewData["Title"] = "ویرایش آموزشگاه";
}


<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">ویرایش آموزشگاه </h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <form method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="Student.StudentId" />
        <input type="hidden" asp-for="Student.ImageName" />

        <!-- /.panel-heading -->
        <div class="col-md-8">
            <div class="form-group">
                <label>نام هنرجو</label>
                <input type="text" asp-for="Student.StudentFullName" class="form-control">
            </div>
            <div class="form-group">
                <label>سازها</label>
                <input type="text" asp-for="Student.LearningInstrument" class="form-control">
            </div>
            <div class="form-group">
                <label>توضیحات</label>
                <input type="text" asp-for="Student.Description" class="form-control">
            </div>
          
            <input type="submit" value="ذخیره اطلاعات" class="btn btn-success" />
        </div>
        <div class="col-md-4">
            <img id="imgCourse" src="/student/@Model.Student.ImageName" alt="logo" class="thumbnail" />
            
            <div class="form-group">
                <label>انتخاب تصویر</label>
                <input type="file" name="imgLogo" id="imgLogo">
            </div>
        </div>
    </form>
</div>

@section Scripts
{
    <script>
        function readURL(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function (e) {
                    $('#imgCourse').attr('src', e.target.result);
                }
                reader.readAsDataURL(input.files[0]);
            }
        }

        $("#imgLogo").change(function () {
            readURL(this);
        });
    </script>
}



