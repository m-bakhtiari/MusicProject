@page "{id}"
@model TopLearn.Web.Pages.Admin.Student.DeleteStudentModel
@{
    ViewData["Title"] = "حذف ساز";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">حذف ساز </h1>
    </div>
</div>

<div class="row">
    <form method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="Student.StudentId" />
        <div class="col-md-12">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    حذف هنرجو
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="form-group">
                        <label>آیا از حذف @Model.Student.StudentFullName اطمینان دارید ؟</label>
                    </div>
                    
                    <input type="submit" value="حذف اطلاعات" class="btn btn-danger" />
                </div>
                <!-- /.panel-body -->
            </div>
        </div>

    </form>
</div>


