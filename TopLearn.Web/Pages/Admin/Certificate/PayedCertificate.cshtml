@page "{id}"
@model TopLearn.Web.Pages.Admin.Certificate.PayedCertificateModel
@{
    ViewData["Title"] = "وضعیت پرداخت";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">وضعیت پرداخت </h1>
    </div>
</div>

<div class="row">
    <form method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="Certificate.CertificateId" />
        <div class="col-md-12">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    حذف هنرجو
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="form-group">
                        <label>آیا از تغییر وضعیت پرداخت @Model.Certificate.FirstName &nbsp; @Model.Certificate.LastName اطمینان دارید ؟</label>
                    </div>
                    
                    <input type="submit" value="تغییر وضعیت" class="btn btn-danger" />
                </div>
                <!-- /.panel-body -->
            </div>
        </div>

    </form>
</div>


