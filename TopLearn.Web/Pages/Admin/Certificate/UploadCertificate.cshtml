@page "{id?}"

@model TopLearn.Web.Pages.Admin.Certificate.UploadCertificateModel
@{
    ViewData["Title"] = "آپلود مدرک";
}


<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">آپلود مدرک</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <form method="post" enctype="multipart/form-data">
        <div class="col-md-8">
            <input type="hidden" asp-for="Certificate.CertificateId" />
            <img id="imgCourse" class="thumbnail" src="/UserAvatar/Defult.jpg" alt="logo" />
            <div class="form-group">
                <label>انتخاب تصویر</label>
                <input type="file" name="imgLogo" id="imgLogo">
            </div>
            <input type="submit" value="ذخیره اطلاعات" class="btn btn-success" />

        </div>

    </form>
</div>

@section Scripts
{
    <script>
        function readURL(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function (e) {
                    $('#imgLogo').attr('src', e.target.result);
                }
                reader.readAsDataURL(input.files[0]);
            }
        }

        $("#imgLogo").change(function () {
            readURL(this);
        });
    </script>

}




