@page
@model TopLearn.Web.Pages.Admin.Certificate.IndexModel
@{
    ViewData["Title"] = "لیست افراد";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">لیست افراد</h1>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                لیست افراد
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">
                        
                        <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>نام</th>
                                    <th> پرداخت</th>
                                    <th>وضعیت </th>
                                    <th>موبایل</th>
                                    <th>کد ملی</th>
                                    <th>آموزشگاه</th>
                                    <th>ساز</th>
                                    <th>توضیحات</th>
                                    <th>تاریخ درخواست</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Certificates)
                                {
                                    <tr>
                                        <td>@item.FirstName &nbsp; @item.LastName</td>
                                        <td>
                                            @if (item.IsPay)
                                            {
                                                <span class="alert alert-success">بله</span>
                                            }
                                            else
                                            {
                                                <span class="alert alert-warning">خیر</span>
                                            }
                                        </td>
                                        <td>
                                            @if (item.IsDone)
                                            {
                                                <span class="alert alert-success">صادرشده</span>
                                            }
                                            else
                                            {
                                                <span class="alert alert-warning">بررسی نشده</span>
                                            }
                                        </td>
                                        <td>@item.Mobile</td>
                                        <td>@item.NationalCode</td>
                                        <td>@item.Academy</td>
                                        <td>@item.Instrument</td>
                                        <td>@item.Description</td>
                                        <td>@item.CreatedDate</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
