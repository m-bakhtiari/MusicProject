@page
@model TopLearn.Web.Pages.Admin.Instruments.IndexModel
@{
    ViewData["Title"] = "لیست سازها";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">لیست ساز ها</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                لیست ساز ها
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">
                        <div class="col-md-12" style="margin: 10px 0;">

                            <a asp-page="CreateInstrument" class="btn btn-outline btn-success">افزودن ساز جدید</a>

                        </div>
                        <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                            <thead>
                                <tr>
                                    <th>عنوان ساز</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var instrument in Model.Instruments)
                                {
                                    <tr>
                                        <td>@instrument.InstrumentTitle</td>
                                        <td>
                                            <a href="/Admin/Instruments/DeleteInstrument/@instrument.InstrumentId" class="btn btn-info btn-sm">
                                                حذف
                                            </a>
                                            <a href="/Admin/Instruments/EditInstrument/@instrument.InstrumentId" class="btn btn-warning btn-sm">
                                                ویرایش
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
