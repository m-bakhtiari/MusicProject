@page "{id?}"
@model TopLearn.Web.Pages.Admin.Instruments.CreateInstrumentModel
@{
    ViewData["Title"] = "افزودن ساز جدید";
}


<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">افزودن ساز جدید</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <form method="post" enctype="multipart/form-data">
        <div class="col-md-12">
            <div class="panel panel-primary">
                <div class="panel-heading">
                   ساز جدید
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="form-group">
                        <label>عنوان ساز</label>
                        <input type="text" asp-for="Instruments.InstrumentTitle" class="form-control">
                    </div>
                    <div class="form-group">
                        <label>توضیح ساز</label>
                        <input type="text" asp-for="Instruments.Description" class="form-control">
                    </div>
                    <input type="submit" value="ذخیره اطلاعات" class="btn btn-success" />
                </div>
                <!-- /.panel-body -->
            </div>
        </div>
  
    </form>
</div>




