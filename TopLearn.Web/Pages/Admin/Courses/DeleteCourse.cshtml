@page "{id}"
@model TopLearn.Web.Pages.Admin.Courses.DeleteCourseModel
@{
    ViewData["Title"] = "حذف محصول";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">حذف ساز </h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <form method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="Product.ProductId" value="@ViewData["CourseId"]" />
        <div class="col-md-12">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    ویرایش ساز
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="form-group">
                        <label>آیا از حذف @Model.Product.CourseTitle اطمینان دارید ؟</label>
                    </div>

                    <input type="submit" value="حذف اطلاعات" class="btn btn-danger" />
                </div>
                <!-- /.panel-body -->
            </div>
        </div>

    </form>
</div>