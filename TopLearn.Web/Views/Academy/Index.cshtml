@model List<TopLearn.DataLayer.Entities.Course.Academy>

<section data-scroll-section>
    <div class="album-cover">
        <div class="swiper">
            <div class="swiper-wrapper">
                @foreach (var item in Model)
                {
                    <div class="swiper-slide">
                        <img src="/academy/@item.LogoImageName" alt="@item.AcademyTitle" />
                        <div class="overlay">
                            <a href="#">
                                <ion-icon name="logo-youtube"></ion-icon>
                            </a>
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>

    <div class="music-player">
        <h1> </h1>
        <p> </p>

        <div class="controls">
            <button class="backward">
                <
            </button>
            <button class="play-pause-btn" hidden="hidden">
                <i class="fa-solid fa-play" id="controlIcon"></i>
            </button>
            <button class="forward">
                >
            </button>
        </div>
        <audio id="song" hidden="hidden">
            <source src="song-list/Luke-Bergs-Gold.mp3" type="audio/mpeg" />
        </audio>

        <input type="range" value="0" id="progress" hidden="hidden" />
    </div>
</section>

<section data-scroll-section>
    <div class="list-images">
        <div class="list-images__heading-box">

            <p class="list-images__text">
                برای هماهنگی حضور در کلاس های خصوصی یا گرفتن مشاوره برای انتخاب ساز با آکادمی های زیر در تماس باشید
            </p>
            <h1 class="list-images__heading">
                MY
