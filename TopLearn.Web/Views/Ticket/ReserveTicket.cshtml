@section Styles
{
    <style>

        .ticket-header {
            background: #6200ea;
            color: white;
            padding: 1rem;
            text-align: center;
        }

        nav {
            margin-top: 0.5rem;
        }

        .nav-button {
            background: white;
            color: black;
            border: none;
            padding: 0.5rem 1rem;
            margin: 0 0.25rem;
            border-radius: 5px;
            cursor: pointer;
            font-weight: bold;
            text-align: center;
            margin-right: auto;
            margin-left: auto;
        }

        .filters {
            padding: 1rem;
            text-align: center;
        }

        .seating {
            padding: 1rem;
        }

        .seat-chart {
            display: flex;
            flex-direction: column;
            gap: 0.5rem;
            align-items: center;
            direction: ltr;
        }

        .row {
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .row-label {
            font-weight: bold;
            width: 2rem;
            text-align: center;
        }

        .seat {
            width: 2rem;
            height: 2rem;
            border-radius: 4px;
            border: none;
            cursor: pointer;
        }

        .reserve {
            background: orange;
            color: white;
        }

        .available {
            background: green;
            color: white;
        }

        .unavailable {
            background: #2196f3;
            color: white;
            cursor: not-allowed;
        }

        .selected {
            background: #fff;
            border: 2px solid orange;
            color: #000;
        }

        .footer {
            padding: 1rem;
            text-align: center;
            background: transparent;
        }


        /* 📱 واکنش‌گرایی */
        @@media (max-width: 600px) {
            .row {
                flex-wrap: nowrap;
                justify-content: center;
                gap: 1px;
            }

            .seat {
                width: 14px;
                height: 14px;
                font-size: 10px;
                /* اگر عدد داخل دکمه مهمه */
                padding: 0;
            }

            nav button {
                margin-top: 0.5rem;
                display: block;
                width: 100%;
            }

            .row-label {
                display: none;
            }
        }

        .form-group {
            display: flex;
            flex-direction: column;
            margin-bottom: 1rem;
            width: 100%;
            max-width: 400px;
            margin-left: auto;
            margin-right: auto;
        }

            .form-group label {
                font-weight: bold;
                margin-bottom: 0.25rem;
                text-align: right;
            }

            .form-group input {
                padding: 0.5rem;
                border: 1px solid #ccc;
                border-radius: 5px;
                font-size: 1rem;
            }

        .footer form {
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 1rem;
        }

        .footer p {
            font-size: 1.2rem;
            font-weight: bold;
            color: #333;
        }


        /* 📱 واکنش‌گرایی فرم */
        @@media (max-width: 600px) {
            .form-group {
                max-width: 100%;
                padding: 0 1rem;
            }

            .footer form {
                gap: 0.75rem;
            }

            .reserveTag {
                width: 100%;
            }
        }

        .legend {
            display: flex;
            justify-content: center;
            gap: 2rem;
            margin: 1rem 0;
            flex-wrap: wrap;
        }

        .legend-item {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            font-size: 0.9rem;
            color: white;
        }

            .legend-item .seatTag {
                width: 1.5rem;
                height: 1.5rem;
                border-radius: 4px;
                border: none;
            }

        .availableTag {
            background: green;
            color: white;
        }

        .unavailableTag {
            background: #2196f3;
            color: white;
            cursor: not-allowed;
        }

