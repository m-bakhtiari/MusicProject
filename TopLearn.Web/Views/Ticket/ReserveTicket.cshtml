@using Newtonsoft.Json
@model List<TopLearn.DataLayer.Entities.Course.ConcertTicket>
@{
    var seatCounts = ViewData["Seat"].ToString().Split("-");
    var reservedSeats = ViewData["SeatReserve"] as List<string>;
}

<section data-scroll-section style="margin-top: 60px">
    <div class="container row">

        <section class="seating">
            <h1 style="text-align: center">کنسرت هاوانا</h1>
            <br />
            <h2>وحید نجفی زاده</h2>
            <hr />
            <h3>انتخاب صندلی</h3>
            <h4 style="color:orangered">@ViewData["Error"]</h4>
            <div class="seat-chart">

                @for (var i = 0; i < 13; i++)
                {
                    <div class="row">
                        <span class="row-label">@((i + 1))</span>
                        @for (var j = 1; j <= int.Parse(seatCounts[i]); j++)
                        {
                            @if(i==0 || i == 1)
                            {
                                <button value="@($"{i + 1}-{j}")" class="seat reserve">@j</button>
                            }
                            else
                            {
                                <button value="@($"{i + 1}-{j}")" class="seat @(reservedSeats.Contains($"{i + 1}-{j}") ? "unavailable" : "available")">@j</button>
                            }
                        }
                    </div>
                }

                <div class="legend row">
                    <div class="legend-item">
                        <span class="seatTag unavailableTag"></span>
                        <span>خریداری شده (آبی)</span>
                    </div>
                    <div class="legend-item">
                        <span class="seatTag availableTag"></span>
                        <span>آزاد (سبز)</span>
                    </div>
                    <div class="legend-item">
                        <span class="seatTag reserveTag"></span>
                        <span>غیرقابل فروش (زرد)</span>
                    </div>
                </div>

                <div class="footer row">
                    <form action="/BuyTicket" method="get" id="buyTicket">
                        <div class="form-group">
                            <p style="color: whitesmoke" id="selectedSeatList"></p>
                        </div>
                        @*   <div class="form-group">
            <label for="firstname">نام :</label>
            <input type="text" class="form-control" name="firstname" id="firstname" required>
        </div>*@

                        <div class="form-group">
                            <label for="nationalCode">:کد ملی </label>
                            <input type="text"
                                   class="form-control" name="nationalCode" id="nationalCode"
                                   required placeholder="1234567899" autocomplete="off">
                        </div>

                        <div class="form-group">
                            <label for="mobile">:شماره موبایل</label>
                            <input type="text" class="form-control" name="mobile" id="mobile" maxlength="11" minlength="11"
                                   required autocomplete="off" placeholder="09123456789">
                        </div>
                        <input type="hidden" name="selectedSeats" id="selectedSeats" required />
                        <button type="button" style="background-color:blue;color:white;padding:10px;border-radius:5px;"
                                id="saveBtn" onclick="confirmSubmit()">
                            رزرو و ادامه
                        </button>
                        <strong> تاریخ اجرا : 27 آذر 1404 ساعت 11 صبح</strong>
                    </form>
                </div>
            </div>
        </section>

    </div>
</section>







